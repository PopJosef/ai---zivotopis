<body>
  <h1>AI Generátor životopisu</h1>

  <label for="name">Jméno:</label>
  <input type="text" id="name" placeholder="Např. Jan Novák" />

  <label for="email">E-mail:</label>
  <input type="email" id="email" placeholder="např. jan@email.cz" />

  <label for="education">Vzdělání:</label>
  <textarea id="education" placeholder="Např. SŠ keramická výroba, vyučen 1998"></textarea>

  <label for="experience">Pracovní zkušenosti:</label>
  <textarea id="experience" placeholder="Např. Velitel ostrahy ve FN Plzeň, odpovědnost za tým 25 lidí..."></textarea>

  <label for="skills">Dovednosti:</label>
  <textarea id="skills" placeholder="Např. vedení lidí, práce s AI, řešení krizových situací"></textarea>

  <label for="language">Jazyk:</label>
  <select id="language">
    <option value="cz">Čeština</option>
    <option value="en">Angličtina</option>
  </select>

  <button onclick="generateCV()">Vygenerovat životopis</button>

  <h2>Výstup:</h2>
  <div id="output"></div>

  <script>
    async function generateCV() {
      const name = document.getElementById("name").value;
      const email = document.getElementById("email").value;
      const education = document.getElementById("education").value;
      const experience = document.getElementById("experience").value;
      const skills = document.getElementById("skills").value;
      const language = document.getElementById("language").value;

      const prompt = `${language === "cz" ? "Napiš profesionální životopis v češtině" : "Write a professional resume in English"} na základě těchto údajů:

      Jméno: ${name}
      Email: ${email}
      Vzdělání: ${education}
      Pracovní zkušenosti: ${experience}
      Dovednosti: ${skills}`;

      const response = await fetch("https://api.openai.com/v1/chat/completions", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Authorization": "Bearer TVŮJ_API_KLÍČ"
        },
        body: JSON.stringify({
          model: "gpt-4",
          messages: [{ role: "user", content: prompt }],
          temperature: 0.7
        })
      });

      const data = await response.json();
      const output = data.choices?.[0]?.message?.content || "Chyba při generování.";
      document.getElementById("output").innerText = output;
    }
  </script>
</body>
